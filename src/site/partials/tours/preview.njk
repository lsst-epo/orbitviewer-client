
{# ITEMS #}
<div class="tour-preview-item">
	
	<div class="thumb" style="background-image: url({{ experience.tourPreview[0].url }});"></div>
	
	<div class="text">
	
		<h3>{{ experience.title }}</h3>
	
		<div class="sub-text">
			
			<div class="duration">
				<h4>Duration</h4>
				{% include "ui/icons/stopwatch.njk" %}
				<p>{{ experience.duration }}m</p>
			</div>
			
			<div class="complexity">
				<h4>Complexity</h4>
				<div><span class="{{ 'active' if experience.complexity >= 1 }}"></span><span class="{{ 'active' if experience.complexity >= 2 }}"></span><span class="{{ 'active' if experience.complexity >= 3 }}"></span><span class="{{ 'active' if experience.complexity >= 4 }}"></span><span class="{{ 'active' if experience.complexity >= 5 }}"></span></div>
				<p>{% if experience.complexity < 3 %}Easy{% else %}Hard{% endif %}</p>
			</div>

		</div>
	
	</div>

</div>

